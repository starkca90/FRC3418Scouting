<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txABTeam"
        android:textSize="@dimen/text_ActionBarSize"
        android:textColor="@color/colorABText"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_ActionBarSize"
        android:textColor="@color/colorABText"
        android:id="@+id/tvABTeam"
        android:text="8888" />

    <Space
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_ActionBarSize"
        android:textColor="@color/colorABText"
        android:text="@string/txABMatch" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_ActionBarSize"
        android:textColor="@color/colorABText"
        android:id="@+id/tvABMatch"
        android:text="555" />

    <Space
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_ActionBarSize"
        android:textColor="@color/colorABText"
        android:text="@string/txABNextPhase"
        android:background="@android:color/transparent"
        android:id="@+id/btnABNext" />

</LinearLayout>